<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_kulinerest_makassar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailClubActivity"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Kulinerest Makassar"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingTop="15dp"/>

        <TextView
            android:id="@+id/txtDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="Aplikasi Kulinerest makassar adalah aplikasi yang bisa memberi tahu kepada kalian semua tentang makanan khas makasar yang wajib kalian coba. Dan diaplikasi ini juga kalian bisa melihat tempat rekomendasi untuk mencoba makanan tersebut. Serta kalian dapat menghubungi langsung restorannya untuk reservasi tempat. "/>

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/btnEmail"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Kritik Saran"/>

    </LinearLayout>
</ScrollView>