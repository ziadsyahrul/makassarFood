<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_kulinerest_makassar">


    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ziad Syahrul Mubarak"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingTop="15dp"/>


    <TextView
        android:padding="10dp"
        android:id="@+id/txtDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:paddingTop="15dp"
        android:text="Halo Saya adalah orang yang membuat aplikasi ini. Aplikasi ini saya buat untuk mempermudah orang jika ingin mencari tahu tentang makanan khas kota makassar.\n
\n
Email : ziadsm24@gmail.com"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="13dp"
        android:background="@drawable/gmail"
        android:id="@+id/btnGmail"
        android:onClick="btnGmail"
        tools:ignore="OnClick"
        android:padding="10dp"
        />


</LinearLayout>